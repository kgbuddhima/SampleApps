<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ProgressbarSample">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="1" x:Name="txtValue"></Entry>
            <Button Text="Increment" x:Name="btnValPlus" Clicked="BtnValPlus_Clicked"/>
            <StackLayout Padding="10,10,10,10" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Label x:Name="lblMin" Text="0"></Label>
                <ProgressBar x:Name="pb1" ProgressColor="Red" Progress="0.5" HorizontalOptions="FillAndExpand">
                </ProgressBar>
                <Label x:Name="lblMax" Text="100" HorizontalOptions="End"></Label>
            </StackLayout>
            <Button Text="Test button" x:Name="btnTest" Clicked="BtnTest_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>