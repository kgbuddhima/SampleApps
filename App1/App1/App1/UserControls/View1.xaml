<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.UserControls.View1"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">
    >
    <ContentView.Content>
        <Frame CornerRadius="0.5" BackgroundColor="White" x:Name="frameMyFrame">
            <StackLayout>
                <ffimageloading:CachedImage x:Name="imgMyImage" DownsampleToViewSize="True" Aspect="AspectFill"/>
                <Label x:Name="txtImageDesc" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>